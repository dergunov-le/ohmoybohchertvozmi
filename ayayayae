
#1-ое занятие

 переменная = ...                     # Задать переменную
print('текст')                        # вывести в терминал
print(9 / 4)                          # Деление с остатком
print(9 // 4)                         # Деление без остатка
print(1)                              # число
print('1')                            # текст

n = '666'
m = 228
print(int(n) + m)                     # сменяет тип переменной на число
print(n + str(m))                     # сменяет тип переменной на строку
print(f'{n}{m}')                      # сменяет все переменные на строку
j = f'{m} - "это переменная"'         # в кавычках не могут быть только такие же кавычки
print(j)
print(n, m)
print(n, f'\n{m}')

name1 = int(input('Введите число '))  # запрашивает численную переменную


#2-ое занятие

name = 'Home'
print(type(name))                     # определяет тип переменной
